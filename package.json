{
	"name": "ts-es-prettier",
	"version": "1.0.0",
	"description": "",
	"main": "index.js",
	"scripts": {
		"dev": "concurrently \"nodemon\" \"nodemon -x tsoa spec-and-routes\"",
		"docker": "docker compose up dynamodb",
		"docker:detach": "docker compose up -d dynamodb",
		"test": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:integration": "yarn docker && tsoa spec-and-routes && yarn test",
		"build": "tsoa spec-and-routes && tsc",
		"start": "node build/src/server.js",
		"format": "prettier --write .",
		"sls:local": "sls offline -s dev --reloadHandler",
		"deploy:dev": "serverless deploy --stage dev",
		"deploy:stg": "serverless deploy --stage stg",
		"deploy:prod": "serverless deploy --stage prod",
		"prepare": "husky install"
	},
	"keywords": [],
	"author": "",
	"license": "ISC",
	"dependencies": {
		"@aws-sdk/client-dynamodb": "^3.325.0",
		"@aws-sdk/client-s3": "^3.325.0",
		"@aws-sdk/lib-dynamodb": "^3.325.0",
		"dotenv": "^16.0.3",
		"express": "^4.18.2",
		"inversify": "^6.0.1",
		"serverless-http": "^3.1.1",
		"swagger-ui-express": "^4.6.2",
		"tsoa": "^5.1.1",
		"uuid": "^9.0.0"
	},
	"devDependencies": {
		"@types/express": "^4.17.17",
		"@types/node": "^18.16.3",
		"@types/supertest": "^2.0.12",
		"@types/swagger-ui-express": "^4.1.3",
		"@types/uuid": "^9.0.1",
		"@typescript-eslint/eslint-plugin": "^5.43.0",
		"@typescript-eslint/parser": "^5.40.1",
		"@vitest/coverage-c8": "^0.31.0",
		"concurrently": "^8.0.1",
		"eslint": "^8.0.1",
		"eslint-config-prettier": "^8.5.0",
		"husky": "^8.0.3",
		"lint-staged": "^13.2.2",
		"nodemon": "^2.0.22",
		"prettier": "^2.8.8",
		"serverless-offline": "^12.0.4",
		"serverless-plugin-typescript": "^2.1.4",
		"supertest": "^6.3.3",
		"ts-node": "^10.9.1",
		"typescript": "^5.0.4",
		"vitest": "^0.30.1"
	},
	"lint-staged": {
		"*.js": "eslint --cache --fix",
		"*": "prettier --ignore-unknown --write"
	}
}
